<h1>Burgers!</h1>
<div class = "row">
<div class = "col-4">
<h2>Burgers that are not devoured!</h2>

<ul class = "burgnot">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class = "col-4">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
      <img id = "burgpic" src = "/ultimate-veggie-burger.jpg"></img>
    
    <input type="text" class ="row" id="ca" name="name" plceholder = "burger name here">
  </div>



  <button type="submit" class = "row">Add Burger</button>
</form>
</div>

<div class = "col-4">
<h2>Burgers that are devoured!</h2>

<ul class = "burgdevd">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

